<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.SignUpFragment">

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/name_editText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <EditText
            android:id="@+id/name_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_button_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/login_button_margin"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_textView" />

        <TextView
            android:id="@+id/email_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="email"
            app:layout_constraintStart_toStartOf="@id/sign_email_editText"
            app:layout_constraintTop_toBottomOf="@id/name_editText" />

        <EditText
            android:id="@+id/sign_email_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_button_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/login_button_margin"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_textView" />

        <TextView
            android:id="@+id/pass_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="password"
            app:layout_constraintStart_toStartOf="@+id/sign_pass_editText"
            app:layout_constraintTop_toBottomOf="@id/sign_email_editText" />

        <EditText
            android:id="@+id/sign_pass_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_button_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/login_button_margin"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pass_textView" />

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/sign_up_button"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/login_button_margin"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/login_button_margin"
            android:text="Sign Up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_pass_editText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>